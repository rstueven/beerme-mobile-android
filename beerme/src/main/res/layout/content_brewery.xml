<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:padding="8dp"
    tools:context="com.beerme.android.BreweryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_map_black_24dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_open_in_browser_black_24dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/beerlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_list_black_24dp"
                android:text="@string/beer_list"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1"
                android:contentDescription="@string/premises_image" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/image_zoomed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/premises_image"
        android:visibility="invisible" />
</FrameLayout>